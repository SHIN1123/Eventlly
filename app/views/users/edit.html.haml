.wrapper

  = render "shared/header"

  .event-detail
    .event-detail-option
      - if @user.id == current_user.id
      - else
        - if @isRoom == true
          %p
            %a{href: "/rooms/#{@roomId}"} dm画面へ
        - else
          = form_for @room do |f|
            = fields_for @entry do |e|
              = e.hidden_field :user_id, value: @user.id
            = f.submit "dmを送る"
      = link_to "ユーザー一覧へ", users_path

  .page-user-name
    = @user.name
    = "さんの投稿一覧"
  .main-page
    = form_for @user do |f|
      = f.file_field :image
      = f.text_field :introduce
      = f.submit '編集する'


